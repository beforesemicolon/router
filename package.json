{
    "name": "@beforesemicolon/router",
    "version": "1.2.1-next",
    "description": "Web component router by Before Semicolon",
    "type": "module",
    "types": "./dist/types/index.d.ts",
    "exports": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js",
        "default": "./dist/cjs/index.js",
        "types": "./dist/types/index.d.ts"
    },
    "scripts": {
        "lint": "eslint ./src && prettier --check ./src",
        "format": "eslint ./src --fix && prettier --write ./src",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "local": "nodemon --watch src -e ts --exec 'npx esbuild src/client.ts --bundle --outfile=public/client.js --format=iife --platform=browser --target=es2015 --minify'",
        "build": "rm -rf dist && npm-run-all lint test && tsc --emitDeclarationOnly && node build.js"
    },
    "keywords": [
        "web-component",
        "javascript",
        "markup",
        "router",
        "web"
    ],
    "author": "Elson Correia",
    "license": "BSD-3-Clause",
    "repository": {
        "url": "https://github.com/beforesemicolon/router",
        "type": "git"
    },
    "devDependencies": {
        "@beforesemicolon/builder": "latest",
        "@types/jest": "^29.5.1",
        "@types/jsdom": "^21.1.1",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "http-server-spa": "^1.3.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "jsdom": "^22.1.0",
        "nodemon": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "3.0.3",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@beforesemicolon/web-component": "latest"
    }
}
